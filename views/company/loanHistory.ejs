<!DOCTYPE html>
<html>
<%- include ../public/header %>
<body>
<div class="wrapper">
    <%- include ../public/sidebar %>
    <div class="main-panel">
        <%- include ../public/nav %>
        <div class="investment_f">
            <div id="myTabContent" class="tab-content" style="padding: 25px">
                <!--贷款管理-->
                <div class="fade in active" id="customerInfo">
                    <div>
                        <a type="button" class="btn btn-success btn-sm" href="/company/loan">
                            <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>返回
                        </a>
                    </div>
                    <div style="text-align: center;">
                        <div class="card">
                            <div class="card-header" data-background-color="green">
                                <h4 class="title"><strong>贷款历史</strong></h4>
                            </div>
                            <div class="card-content table-responsive">
                                <table class="table table-striped table-hover table-condensed table-bordered">
                                    <thead>
                                    <tr>
                                        <td>统一社会信用代码</td>
                                        <td>贷款申请编号</td>
                                        <td>产品代码</td>
                                        <td>申请金额</td>
                                        <td>申请日期</td>
                                        <td>审批日期</td>
                                        <td>发起人</td>
                                        <td>审批人</td>
                                    </tr>
                                    </thead>
                                    <tbody id="roleData">
                                    <% if(!!locals.data && locals.data.length > 0){ %>
                                    <% data.forEach(function (item) { %>
                                    <tr>
                                        <td><%= item.credit_code %></td>
                                        <td><%= item.loan_id %></td>
                                        <td><%= item.product_id %></td>
                                        <td><%= item.sCNMoneyAmount %></td>
                                        <td><%= item.application_date %></td>
                                        <td><%= item.approval_date %></td>
                                        <td><%= item.operator %></td>
                                        <td><%= item.check_operator %></td>
                                    </tr>
                                    <% }) %>
                                    <% }else{ %>
                                    <tr>
                                        <td colspan="8">暂无数据</td>
                                    </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <% if(!!locals.data && locals.data.length > 0){ %>
                        <% if(!!locals.pageList){ %>
                        <div class="tcdPageCode"></div>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../public/errorPagePop %>
</body>
</html>
