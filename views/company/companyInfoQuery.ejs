<!DOCTYPE html>
<html>
<%- include ../public/header %>
<body>
<div class="wrapper">
    <%- include ../public/sidebar %>
    <div class="main-panel">
        <%- include ../public/nav %>
        <div class="investment_f">
            <% include ./infoQureyMenu %>
            <div id="myTabContent" class="tab-content" style="padding: 20px;padding-left:30px;">
                <!--企业信息查询-->
                <div class="tab-pane fade in active" id="customerInfo">
                    <form style="width:1110px" class="form-inline" action="/company/companyInfoQuery" method="get">
                        <div class="form-group">
                            <label for="cst_no">统一社会信用代码</label>
                            <input type="text" value="<%= param.credit_code %>" class="form-control" id="cst_no"
                                   name="credit_code">
                        </div>
                        <div class="form-group">
                            <label for="cst_no">企业名称</label>
                            <input type="text" value="<%= param.cst_full_name %>" class="form-control" id="cst_no"
                                   name="cst_full_name">
                        </div>
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-search btn_icon"
                                  aria-hidden="true"></span>查询
                        </button>
                        <p class="btn btn-success order-repeat Reset-to-null">
                            <span class="glyphicon glyphicon-repeat btn_icon"
                                  aria-hidden="true"></span>重置
                        </p>
                    </form>
                    <div class="card">
                        <div class="card-header" data-background-color="green">
                            <h4 class="title"><strong>企业额度查询</strong></h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table style="text-align: center"
                                   class="table table-striped table-hover table-condensed table-bordered">
                                <thead class="text-primary">
                                <tr>
                                    <td>统一社会信用代码</td>
                                    <td>企业名称</td>
                                    <td>信用等级</td>
                                    <td>可用额度(元)</td>
                                    <td>企业人数</td>
                                </tr>
                                </thead>
                                <tbody>
                                <% if(!!locals.data && locals.data.list.length > 0){ %>
                                <% data.list.forEach(function(item){ %>
                                <tr>
                                    <td><%= item.credit_code %></td>
                                    <td><%= item.cst_full_name %></td>
                                    <td><%= item.cst_credit_level %></td>
                                    <td><%= item.available_credit %></td>
                                    <td><%= item.worker_amt %></td>
                                </tr>
                                <% }) %>
                                <% }else{ %>
                                <tr>
                                    <td colspan='5'>暂无数据!</td>
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <% if(!!locals.pageList){ %>
                    <div class="tcdPageCode"></div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../public/errorPagePop %>
<%- include ../public/page %>
</body>
</html>
