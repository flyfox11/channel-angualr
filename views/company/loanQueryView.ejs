<!DOCTYPE html>
<html>
<%- include ../public/header %>
<body>
<div class="wrapper">
    <%- include ../public/sidebar %>
    <div class="main-panel">
        <%- include ../public/nav %>
        <div class="investment_f">
            <div style="padding: 20px">
                <form action="/company/loan" method="get">
                    <div class="form-group">
                        <label for="credit_code">合作项目</label>
                        <select class="form-control bp-select-gradient" name="projectNo">
                            <option value="">所有</option>
                            <% if(!!locals.data && locals.data.length > 0){ %>
                            <% data.forEach(function(item){ %>
                            <option value="<%= item.project_no %>"><%= item.project_name %></option>
                            <% }) %>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="credit_code">统一社会信用代码</label>
                        <input type="text" class="form-control" name="credit_code">
                    </div>
                    <div class="form-group">
                        <label for="project">企业名称</label>
                        <input type="text" class="form-control" name="cst_full_name">
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-search btn_icon"
                                  aria-hidden="true"></span>查询
                        </button>
                        <button id="reset" type="button" class="btn btn-success Reset-to-null">
                            <span class="glyphicon glyphicon-repeat btn_icon"
                                  aria-hidden="true"></span>重置
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include ../public/errorPagePop %>
</body>
</html>
