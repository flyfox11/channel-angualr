<!DOCTYPE html>
<html>
<%- include ../public/header %>
<body>
<div class="wrapper">
    <%- include ../public/sidebar %>
    <%- include ./fileUpload %>
    <div class="main-panel">
        <%- include ../public/nav %>
        <div class="investment_f">
            <% include ./dataManageMenu %>
            <div id="myTabContent" class="tab-content" style="padding: 20px">
                <!--订单管理-->
                <% include ./orderMenu %>
                <form style="width:1110px" class="form-inline" action="/company/orderQuery" method="get">
                    <div class="form-group">
                        <label for="cst_no">统一社会信用代码</label>
                        <input type="text" value="<%= param.credit_code %>" class="form-control"
                               name="credit_code">
                    </div>
                    <div class="form-group">
                        <label for="cst_no">企业名称</label>
                        <input type="text" value="<%= param.cst_full_name %>" class="form-control"
                               name="cst_full_name">
                    </div>
                    <div class="form-group">
                        <label for="cst_no">订单号</label>
                        <input type="text" value="<%= param.order_no %>" class="form-control"
                               name="order_no">
                    </div>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-search btn_icon" aria-hidden="true"></span>查询
                    </button>
                    <p class="btn btn-success order-repeat Reset-to-null">
                        <span class="glyphicon glyphicon-repeat btn_icon" aria-hidden="true"></span>重置
                    </p>
                </form>
                <div class="card">
                    <div class="card-header" data-background-color="green">
                        <h4 class="title"><strong>订单信息</strong></h4>
                    </div>
                    <div class="card-content table-responsive">
                        <table style="text-align: center;"
                               class="table table-striped table-hover table-condensed table-bordered">
                            <thead class="text-primary">
                            <tr>
                                <td>统一社会信用代码</td>
                                <td>企业名称</td>
                                <td>订单号</td>
                                <td>产品单价(元)</td>
                                <td>产品数量</td>
                                <td>订单总金额(元)</td>
                                <td>支付日期</td>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(!!locals.data && locals.data.length > 0){ %>
                            <% data.forEach(function(item){ %>
                            <tr>
                                <td><%= item.credit_code %></td>
                                <td><%= item.cst_full_name %></td>
                                <td><%= item.order_no %></td>
                                <td><%= item.sItem_amt %></td>
                                <td><%= item.sItem_quantity %></td>
                                <td><%= item.sTotal_amt_money %></td>
                                <td><%= item.pay_date %></td>
                            </tr>
                            <% }) %>
                            <% }else{ %>
                            <tr>
                                <td colspan='7'>暂无数据!</td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <% if(!!locals.pageList){ %>
                <div class="tcdPageCode"></div>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include ../public/errorPagePop %>
<%- include ../public/page %>
</body>
</html>
