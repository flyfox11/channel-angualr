<div class="modal fade" id="edit-pwd-model" tabindex="10" role="dialog" aria-labelledby="myModalLabel1"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form action="/system/changePwd" method="post" class="form-horizontal form-pwd">
            <div class="modal-content">
                <div class="modal-body" style="margin: 20px">
                    <div class="form-group">
                        <label for="i1">原密码</label>
                        <input type="hidden" id="redirectUrl" name="redirectUrl"/>
                        <input type="password" class="form-control oldpwd"
                               name="ori_password">
                    </div>
                    <div class="form-group">
                        <label for="i6">新密码<span style="font-size: 12px;color:red;">&nbsp;&nbsp;&nbsp;密码长度为6——14位，且数字与字母组合</span></label>
                        <input type="password" class="form-control pwd1" name="password">
                    </div>
                    <div class="form-group">
                        <label for="i6">确认新密码</label>
                        <input type="password" class="form-control pwd2" name="newpwd2">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="提交"/>
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $('#edit-pwd-model').on('show.bs.modal', function () {
       $(".pwd1,.pwd2").val('');
    })
    $("#redirectUrl").val(window.location.pathname);
    if (!!window.location.search) {
        $("#redirectUrl").val(window.location.pathname + window.location.search);
    }

</script>